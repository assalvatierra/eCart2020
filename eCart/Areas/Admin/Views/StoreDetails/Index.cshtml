@model IEnumerable<eCartModels.StoreDetail>

@{
    ViewBag.Title = "Store Lists";
}

<h2>Store Lists</h2>

<p>
    @Html.ActionLink("Back to Dashboard", "Index", "Dashboard") |
    @Html.ActionLink("Create New", "Create")
</p>
<div class="panel bordered">
    <div>
        <table class="table">
            <tr>
                <th>
                     Store&nbsp;Name
                </th>
                <th>
                    Area
                </th>
                <th>
                    City
                </th>
                <th>
                    Category
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    Status
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Remarks)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <span class="table-data-primary-text text-primary">@Html.DisplayFor(modelItem => item.Name)</span>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MasterArea.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MasterCity.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StoreCategory.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StoreStatu.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Remarks)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>