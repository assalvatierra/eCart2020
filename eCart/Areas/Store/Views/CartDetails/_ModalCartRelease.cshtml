<!-- Change Pickup Location Modal -->
<div id="CartReleaseModal" class="modal fade" role="dialog">
    <div class="modal-dialog" style="max-width:380px;">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"> Cart Release </h4>
            </div>
            <div class="modal-body">
                <div class="col-lg-offset-1">

                    <div class="form-group">
                        <p class="control-label"> Date: </p>
                        <input class="form-control" type="text" style="padding-top:5px;" id="release-date" />
                    </div>

                    <div class="form-group">
                        <p class="control-label"> Release By: </p>
                        <input class="form-control" type="text" id="release-by" value=" @ViewBag.UserEmail"  />
                    </div>

                    <div class="form-group" hidden>
                        <p class="control-label"> Login Id: </p>
                        <input class="form-control" type="text" id="release-userId"value="@ViewBag.UserId"  />
                    </div>

                    <div class="form-group">
                        <p class="control-label"> Cart Detail Id: </p>
                        <input class="form-control" type="text" id="release-cartDetailId" value="@ViewBag.CartId" />
                    </div>

                    <div class="form-group">
                        <p class="control-label"> User: </p>
                        @Html.DropDownList("UserDetails", null, htmlAttributes: new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <p class="control-label"> Pickup Location: </p>
                        @Html.DropDownList("StorePickupPoints", null, htmlAttributes: new { @class = "form-control" })
                        
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="AddCartRelease()">Submit</button>
            </div>
        </div>
    </div>
</div>
