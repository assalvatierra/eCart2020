@model eCartModels.StoreDetail

@{
    ViewBag.Title = "Index";
}
<br />


<h1>
    Store Details
</h1>

<p>
    @Html.ActionLink("Back to Store", "Index", "Home", new { id = @ViewBag.StoreId }, null) 
</p>
<hr />
<div class="panel bordered">
    <div class="panel-body" style="margin:10px 0px;">
        <div class="col-lg-12"><h3> Edit Store </h3></div>
        <div class="col-lg-3">
            <img src="@Model.StoreImages.FirstOrDefault().ImageUrl" class="img-thumbnail img-responsive" />
            <div class="form-group col-lg-12" style="display:flex;padding:10px 0;align-items:baseline;">
                <label class="control-label"> Url&nbsp;:&nbsp; </label>
                <input type="text" class="form-control col-lg-8" id="ImgUrl" value="@Model.StoreImages.FirstOrDefault().ImageUrl" />
            </div>
        </div>
       @using (Html.BeginForm()) { 
        <div class="col-lg-9">
            
            <div class="form-group col-lg-6">
                <label class="control-label"> Store Name </label>
                <input type="text" class="form-control" id="Name" value="@Model.Name" />
            </div>
            <div class="form-group col-lg-12">
                <label class="control-label"> Address </label>
                <input type="text" class="form-control" id="Address" style="max-width:88%;" value="@Model.Address" />
            </div>
            <div class="form-group col-lg-6">
                <label class="control-label"> Store Category </label>
                <input type="text" class="form-control" id="Name" value="@Model.StoreCategory.Name" />
            </div>
            <div class="form-group col-lg-6">
                <label class="control-label"> Status </label>
                <select class="form-control">
                    @foreach (var item in ViewBag.Status as IEnumerable<eCart.Models.StoreStatus>)
                    {
                        if (item.Id == Model.StoreStatusId)
                        {
                            <option selected="selected">
                                @item.Name
                            </option>
                        }
                        else
                        {
                            <option>
                                @item.Name
                            </option>
                        }
                    }
                </select>

            </div>
            <div class="form-group col-lg-6" id="City">
                <label class="control-label"> Area </label>
                <select class="form-control">
                    @foreach (var item in ViewBag.Cities as IEnumerable<eCart.Models.MasterCity>)
                    {
                        if (item.Id == Model.MasterCityId)
                        {
                            <option selected="selected">
                                @item.Name
                            </option>
                        }
                        else
                        {
                            <option>
                                @item.Name
                            </option>
                        }
                    }
                </select>
            </div>
            <div class="form-group col-lg-6">
                <label class="control-label"> Area </label>
                <select class="form-control" id="Area">
                    @foreach (var item in ViewBag.Areas as IEnumerable<eCart.Models.MasterArea>)
                    {
                        if (item.Id == Model.MasterAreaId)
                        {
                            <option selected="selected">
                                @item.Name
                            </option>
                        }
                        else
                        {
                            <option>
                                @item.Name
                            </option>
                        }
                    }
                </select>
            </div>
            <div class="form-group col-lg-6">
                <label class="control-label"> Remarks </label>
                <input type="text" class="form-control" id="Name" value="@Model.Remarks" />
            </div>
         </div>
        <div class=" col-lg-12">
            <div class="col-lg-offset-9 col-lg-3">
                <button class="btn btn-primary">
                    Save Changes
                </button>
            </div>
        </div>
        }
    </div>
</div>

<script>

</script>