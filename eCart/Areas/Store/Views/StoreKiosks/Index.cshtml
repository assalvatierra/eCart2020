@model IEnumerable<eCartModels.StoreKiosk>

@{
    ViewBag.Title = "Index";
}

<h2>Store Kiosks List</h2>

<p>
    @Html.ActionLink("Back to Store", "Index", "Store", null, null) |
    @Html.ActionLink("Create New", "Create")
</p>
<div class="panel">
    <div class="panel-body">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.KioskName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SettingId)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.KioskName)
                    </td>
                    <td>
                        @switch (item.SettingId)
                        {
                            case 1:
                                <p>Layout-A</p>
                                break;
                            case 2:
                                <p>Layout-B</p>
                                break;
                            case 3:
                                <p>Layout-C</p>
                                break;
                            default:
                                <p>NA</p>
                                break;
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>