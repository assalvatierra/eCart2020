@model IEnumerable<eCartModels.StoreKiosk>
@{
    ViewBag.Title = "Initialize Store Kiosk";
}

<h2> Select Kiosk</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <a href="@Url.Action("Index", new { id = item.Id })">
            <div class="col-sm-3 ">
                <div class="store-item">
                    <h2> @item.KioskName </h2>
                </div>

            </div>
        </a>
    }


    @if (Model.Count() == 0)
    {   
        <div class="col-lg-12">
            <h4> No Kiosks Registered  </h4>
        </div>
    }
</div>