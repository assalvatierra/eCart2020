@model IEnumerable<eCartModels.StoreDetail>

@{
    ViewBag.Title = "Store Main Page";
}
<div class="jumbotron">
    <h2> Store List </h2>
</div>

<div class="row" style="margin-bottom:50px;">
    <h3> Featured Stores </h3>
    @foreach (var store in Model.Take(2))
    {

        <div class="col-lg-5 col-md-5 col-sm-11 store-item">
            <img src="@store.StoreImages.FirstOrDefault().ImageUrl" class="col-lg-4 col-md-3 col-sm-2" style="max-height:100%;max-width:50%;" />
            <div class="col-lg-5 col-md-5 col-sm-5" style="max-height:100%;max-width:50%;">
                <h4>  @store.Name</h4>
                <span class="badge badge-pill badge-primary">Category</span>
                <br /><br /> @Html.ActionLink("View Products", "Products", "Merchant", new { area = "", id = store.Id }, null)
            </div>
        </div>

    }

</div>

<hr />
<div class="row">
    <h3> All Stores </h3>
    @foreach (var store in Model.Take(10))
    {
        <div class="col-lg-3 col-sm-1 store-item">
            <img src="@store.StoreImages.FirstOrDefault().ImageUrl" class="col-sm-6" style="max-height:100%;max-width:50%;" />
            <div class="col-sm-10">
                <h4>  @store.Name</h4>
                <span class="badge badge-pill badge-primary">Category</span>
                <br /><br /> @Html.ActionLink("View Products", "Products", "Merchant", new { area = "", id = store.Id }, null)
            </div>
        </div>

    }
</div>

@{ Html.RenderAction("_CartSummary", "CartDetails", new { area = "Shopper" }); }

